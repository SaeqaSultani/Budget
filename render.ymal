databases:
  - name: Bugdet
    databaseName: budget_6wpi
    user: budget_6wpi_user

services:
  - type: web
    name: Bugdet
    env: ruby
    buildCommand: "./bin/render-build.sh"
    startCommand: "bundle exec puma -C config/puma.rb"
    envVars:
      - key: DATABASE_URL
        fromDatabase:
          name: budget_6wpi
          property: connectionString
      - key: RAILS_MASTER_KEY
        sync: false